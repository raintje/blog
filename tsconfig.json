{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "$assets/*": ["./src/assets/*"],
      "$components/*": ["./src/components/*"],
      "$layouts/*": ["./src/layouts/*"],
      "$lib/*": ["./src/lib/*"],
      "$pages/*": ["./src/pages/*"],
      "$styles/*": ["./src/styles/*"]
    }
  }
}
